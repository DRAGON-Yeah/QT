# QuantTrade 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 基础配置
DEBUG=False
SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,quanttrade.example.com

# 数据库配置
DB_NAME=quanttrade
DB_USER=quanttrade
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 交易所API配置
# 币安
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
BINANCE_TESTNET_API_KEY=your-binance-testnet-api-key
BINANCE_TESTNET_SECRET_KEY=your-binance-testnet-secret-key

# 欧易
OKX_API_KEY=your-okx-api-key
OKX_SECRET_KEY=your-okx-secret-key
OKX_PASSPHRASE=your-okx-passphrase

# 邮件配置
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@quanttrade.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# 监控配置
SENTRY_DSN=your-sentry-dsn

# 前端配置
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
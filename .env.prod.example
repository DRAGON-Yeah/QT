# QuantTrade 生产环境配置
# 复制此文件为 .env.prod 并填入实际值

# 基础配置
DEBUG=False
SECRET_KEY=your-production-secret-key-here-must-be-very-long-and-random
ENCRYPTION_KEY=your-encryption-key-here-32-bytes-base64-encoded
ALLOWED_HOSTS=quanttrade.example.com,api.quanttrade.example.com

# 数据库配置
DB_NAME=quanttrade
DB_USER=quanttrade
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# Redis配置
REDIS_PASSWORD=your-secure-redis-password

# 交易所API配置
# 币安生产环境
BINANCE_API_KEY=your-binance-production-api-key
BINANCE_SECRET_KEY=your-binance-production-secret-key

# 币安测试环境
BINANCE_TESTNET_API_KEY=your-binance-testnet-api-key
BINANCE_TESTNET_SECRET_KEY=your-binance-testnet-secret-key

# 欧易
OKX_API_KEY=your-okx-api-key
OKX_SECRET_KEY=your-okx-secret-key
OKX_PASSPHRASE=your-okx-passphrase

# 邮件配置
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@quanttrade.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# 监控配置
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# SSL证书路径（如果使用自定义证书）
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=quanttrade-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
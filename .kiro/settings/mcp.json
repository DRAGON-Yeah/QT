{
  "mcpServers": {
    "playwright": {
      "command": "uvx",
      "args": ["mcp-server-playwright"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": [
        "playwright_navigate",
        "playwright_screenshot",
        "playwright_click",
        "playwright_type",
        "playwright_key",
        "playwright_scroll",
        "playwright_wait_for_element",
        "playwright_get_by_role",
        "playwright_get_by_text",
        "playwright_get_by_label",
        "playwright_get_by_placeholder",
        "playwright_get_by_test_id",
        "playwright_locator",
        "playwright_evaluate"
      ]
    }
  }
}
